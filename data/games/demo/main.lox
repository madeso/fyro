class GameState
{
	public var px = 0;
	public var py = 0;

	public fun update(dt)
	{
		var player = fyro.get_input();
		var speed = 10.0;

		this.px = this.px + player.axis_x * dt * speed;
		this.py = this.py + player.axis_y * dt * speed;
	}

	public fun render(cmd)
	{
		cmd.windowbox(200, 200);

		var background = new fyro.Rgb(0.2, 0.2, 0.2);
		cmd.clear(background);

		var red = new fyro.Rgb(1, 0, 0);
		cmd.rect(red, this.px, this.py, 50, 50);
	}
}

fyro.set_state(new GameState());
